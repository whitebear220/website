<h1 class="page-header">Deploy-Config</h1>
<form class="form-signin" role="form" action="/configadd" method="post">
    <!--<form name="addform" action="formadd" method="post" accept-charset="utf-8" onSubmit="return Check();">-->
    <table class="table">
        <div class="row">
            <tr>
                <td>Openstack Version</td>
                <td><select name="openstack_ver" style=width:150px>
                        <option value="pike">pike</option>
                      　<option value="ocata">ocata</option>
                      　<option value="newton">newton</option>
                </td>
                
            </tr>
            <tr><td><h3>System</h3></td><td></td></tr>
            <tr>
                <td>County:</td>
                <td><input type="text" name="county" id="county" value='<%= data.county %>'></td>
            </tr>
            <tr>
                <td>Date:</td>
                <td><input type="text" name="date" id="date" value='<%= data.date %>'></td>
            </tr>
            <tr>
                <td>Time:</td>
                <td><input type="text" name="time" id="time" value='<%= data.time %>'></td>
            </tr>
            <tr>
                <td>Hostname:</td>
                <td><input type="text" name="hostname" value='<%= data.hostname %>' style=width:150px></td>
            </tr>
            <tr>
                <td>IP address:</td>
                <td><input type="text" name="hostip" value='<%= data.hostip %>' style=width:150px></td>
            </tr>
            <tr><td><h3>Network Port</h3></td><td></td></tr>
            <tr>
               <td>Manage:</td>
               <td><input type="text" name="manage_port" id="manage_port" value='<%= data.manage_port %>'></td>
            </tr>
            <tr>
               <td>VM:</td>
               <td><input type="text" name="vmlan_port" id="vmlan_port" value='<%= data.vmlan_port %>'></td>
            </tr>
            <tr>
               <td>Public:</td>
               <td><input type="text" name="public_port" id="public_port" value='<%= data.public_port %>'></td>
            </tr>
            <tr><td><h3>Network Config</h3></td><td></td></tr>
            <tr>
                <th></th>
                <th>Address</th>
                <th>Gateway</th>
                <th>DNS</th>
            </tr>
            <tr>
                <td>Manage Network:</td>
                <td>
                    <input type="text" name="manage_ip" id="manage_ip" value="<%= data.manage_ip %>" />
                </td>
                <td>
                    <input type="text" name="manage_gw" id="manage_gw" value="<%= data.manage_gw %>" />
                </td>
                <td>
                    <input type="text" name="dns" id="dns" value="<%= data.dns %>" />
                </td>
            </tr>
            <tr>
                <td>VM Network:</td>
                <td>
                    <input type="text" name="vmlan_ip" id="vmlan_ip" value="<%= data.vmlan_ip %>" />
                </td>
                <td></td>
                <td></td>
            </tr>
            <tr>
                <td>Public Network:</td>
                <td>
                    <input type="text" name="public_net" id="public_net" value="<%= data.public_net %>" />
                </td>
                <td>
                    <input type="text" name="public_gateway" id="public_gateway" value="<%= data.public_gateway %>" />
                </td>
                <td>
                    <input type="text" name="public_dns" id="public_dns" value="<%= data.public_dns %>" />
                </td>
            </tr>
                <td>Public Start:</td>

                <td>
                    <input type="text" name="public_start" id="public_start" value='<%= data.public_start %>'/>
                </td>
                <td></td>
                <td></td>
                <td></td>
            </tr>
            </tr>
                <td>Public Start:</td>
                <td>
                    <input type="text" name="public_end" id="public_end" value='<%= data.public_end %>'/>
                </td>
                <td></td>
                <td></td>
                <td></td>
            </tr>
        </div>
        <table class="table">
                <input class="btn btn-primary btn-lg" type='button' value='Back' onclick="javascript: location.href='/start'">
                <input class="btn btn-primary btn-lg" type='submit' value='Next'>
            </label>
        </table>
    </table>
</form>               